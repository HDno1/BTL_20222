<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_lock"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_baseline_lock_open_24"
        app:tint="#294BC6">

    </ImageView>

    <TextView
        android:id="@+id/txt_change"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_lock"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="CHANGE PASSWORD"
        android:textColor="#294BC6"
        android:textSize="30dp">

    </TextView>

    <TextView
        android:id="@+id/txt_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_change"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Hãy chắc chắn rằng bạn nhớ mật khẩu của mình"
        android:textColor="@color/black"
        android:textSize="16sp">

    </TextView>

    <EditText
        android:id="@+id/old_pass"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txt_notification"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_lock"
        android:hint="Nhập mật khẩu cũ">

    </EditText>

    <EditText
        android:id="@+id/new_pass"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/old_pass"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_lock"
        android:hint="Nhập mật khẩu mới">

    </EditText>

    <EditText
        android:id="@+id/check_pass"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/new_pass"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_baseline_lock_open_24"
        android:hint="Xác nhận mật khẩu mới">

    </EditText>

    <Button
        android:id="@+id/btn_change_pass"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/check_pass"
        android:layout_centerHorizontal="true"
        android:background="@color/purple_500"
        android:text="change password"
        android:textColor="@color/white"
        android:textSize="20dp">

    </Button>



</RelativeLayout>