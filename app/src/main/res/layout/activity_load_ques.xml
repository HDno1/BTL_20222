<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoadQues">

    <EditText
        android:id="@+id/txt_search_ques"
        android:hint="Nhập id môn học"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </EditText>
    <Button
        android:layout_below="@+id/txt_search_ques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_search_ques"
        android:layout_centerHorizontal="true"
        android:text="search">

    </Button>
    <ListView
        android:id="@+id/lv_loadques"
        android:layout_below="@+id/btn_search_ques"
        android:layout_width="match_parent"
        android:layout_height="500dp">

    </ListView>
    <Button
        android:text="Xóa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv_loadques"
        android:id="@+id/btn_delete_question1">

    </Button>

</RelativeLayout>