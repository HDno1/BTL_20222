<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_admin.MainActivity_Admin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADMINISTRATOR"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@+id/image_v1"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true">

    </TextView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_v1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img">

    </ImageView>

    <ImageButton
        android:id="@+id/ima_btn_add_student"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="50dp"
        android:src="@drawable/ic_baseline_person_add_24">

    </ImageButton>

    <TextView
        android:id="@+id/tv_ques1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ima_btn_add_student"
        android:layout_marginLeft="55dp"
        android:text="Thêm sinh viên">

    </TextView>

    <ImageButton
        android:id="@+id/ima_btn_add_ques"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="80dp"
        android:layout_toRightOf="@+id/ima_btn_add_student"

        android:src="@drawable/ic_baseline_playlist_add_24">

    </ImageButton>

    <TextView
        android:id="@+id/tv_ques2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/ima_btn_add_ques"
        android:layout_marginLeft="85dp"
        android:layout_toRightOf="@+id/ima_btn_add_student"
        android:text="Thêm câu hỏi">

    </TextView>

    <ImageButton
        android:id="@+id/ima_btn_dele_ques"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_ques1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_baseline_delete_sweep_24">

    </ImageButton>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"

        android:layout_below="@+id/ima_btn_dele_ques"
        android:text="Xóa câu hỏi">

    </TextView>

    <ImageButton
        android:id="@+id/ima_btn_add_cat"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_ques2"
        android:layout_marginLeft="81dp"
        android:layout_marginTop="31dp"
        android:layout_toRightOf="@id/ima_btn_dele_ques"
        android:src="@drawable/ic_baseline_add_road_24">

    </ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_toRightOf="@+id/ima_btn_dele_ques"
        android:layout_below="@+id/ima_btn_add_cat"
        android:text="Thêm môn thi">

    </TextView>

    <ImageButton
        android:id="@+id/ima_btn_dele_sv"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/ima_btn_add_cat"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="33dp"
        android:src="@drawable/ic_baseline_person_remove_alt_1_24">

    </ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_below="@+id/ima_btn_dele_sv"
        android:text="Xóa sinh viên">

    </TextView>

    <ImageButton
        android:id="@+id/ima_btn_dssv_test"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/ima_btn_add_cat"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="33dp"
        android:layout_toRightOf="@+id/ima_btn_dele_sv"
        android:src="@drawable/ic_baseline_person_remove_alt_1_24">

    </ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_toRightOf="@+id/ima_btn_dele_sv"
        android:layout_below="@+id/ima_btn_dele_sv"
        android:text="DSSV đã TEST">

    </TextView>



</RelativeLayout>